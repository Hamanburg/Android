<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="khwelatestrun.khwela.Editprofile">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/links0"
        tools:targetApi="ice_cream_sandwich">

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="220dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txtlogin"
            android:id="@+id/link_login"
            />

        <TextView
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/txtlogout"
            android:id="@+id/link_logout"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/links0"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/body_update1"
        android:layout_marginTop="36dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtName"
            android:id="@+id/edtName1"
            android:layout_marginTop="20dp"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtID_number"
            android:id="@+id/edtID_number1"
            android:layout_marginTop="20dp"
            android:inputType="numberDecimal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnContinue"
            android:id="@+id/btnContinue1"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCancel"
            android:id="@+id/btnCancel1"
            android:layout_marginTop="10dp"/>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/body_update1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/body_update2"
        android:layout_marginTop="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtName"
            android:id="@+id/edtName"
            android:layout_marginTop="20dp"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtUser_name"
            android:id="@+id/edtusername"
            android:layout_marginTop="20dp"
            android:inputType="text" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtPassword"
            android:id="@+id/edtPassword"
            android:layout_marginTop="20dp"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtConfirm_Password"
            android:id="@+id/edtConfirm_Password"
            android:layout_marginTop="20dp"
            android:inputType="textPassword" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtID_number"
            android:id="@+id/edtID_number"
            android:layout_marginTop="20dp"
            android:inputType="numberDecimal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txtEmail_address"
            android:id="@+id/edtEmail_address"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnContinue"
            android:id="@+id/btnContinue2"
            android:layout_marginTop="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnCancel"
            android:id="@+id/btnCancel2"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>
